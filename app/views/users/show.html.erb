<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
<section>
<a href="<%= user_path(@user) %>">
  <%= gravatar_for @user %>
</a>
<h1>
  <%= link_to @user.name, @user, {:style=>'color:#000000;' }  %>
</h1>
</section>
<section>
<span>
  <%= pluralize(@user.posts.count, "post") %>
  <div></div>
  <%= link_to (pluralize(@user.comments.count, "comment")),user_comments_path(@user), {:style=>'color:#000000;' } %>
</span>
</section>
  </aside>
   <div class="span8">
    <% if @user.posts.any? %>
      <ol class="posts">
               <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>